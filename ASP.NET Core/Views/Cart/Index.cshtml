@model NashSneaker.Data.Cart

@{
    Layout = "~/Views/Header.cshtml";
}

<style>

    th, td {
        padding: 20px;
        text-align: left;
    }
</style>

<section class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="content">
                    <h1 class="page-name">Cart</h1>
                    <ol class="breadcrumb">
                        <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li class="active">cart</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="page-wrapper">
    <div class="cart shopping">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <div class="block">
                        <div class="product-list">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Item Name</th>
                                        <th>Unit Price</th>
                                        <th>Quantity</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.CartDetails)
                                    {
                                        <tr>
                                            <td>
                                                <div class="product-info">
                                                    <img width="100" src="@item.Product.Images.ElementAt(0).Path" alt="product" />
                                                    <a href="#!">@item.Product.Name</a>
                                                </div>
                                            </td>
                                            <td>@item.Product.Price</td>
                                            <td><input type="number" value="@item.Quantity" min="1" max="10" style="width: 50px;"></td>
                                            <td>
                                                <a class="product-remove" href="#!" style="margin-left: 20px;"><i class="fas fa-trash"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="checkout.html" class="btn btn-main pull-right">Checkout</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>